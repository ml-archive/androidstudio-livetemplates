<?xml version="1.0"?>
<template
        format="1"
        revision="1"
        name="Interactor"
        minApi="7"
        minBuildApi="14"
        description="Creates a new Interactor">

    <category value="Nodes Arch"/>
    <formfactor value="Mobile"/>

    <parameter
            id="interactorName"
            name="Name"
            type="string"
            constraints="class|unique|nonempty"
            default=""
            help="The name of the interactor to create"/>

    <parameter
            id="interactorClass"
            name="Name"
            type="string"
            constraints="class|unique|nonempty"
            suggest="${underscoreToCamelCase(classToResource(interactorName))}Interactor"
            help="The name of the class to create"/>

    <parameter
            id="interactorResultType"
            name="Interactor result type"
            type="string"
            default="Any"
            constraints="nonempty"
            help="The type of the object returned by the repository"/>

    <parameter
            id="packageName"
            name="Package name"
            type="string"
            constraints="package"
            default="com.mycompany.myapp"/>

    <execute file="recipe.xml.ftl"/>

</template>

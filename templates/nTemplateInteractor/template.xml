<?xml version="1.0"?>
<template
        format="1"
        revision="1"
        name="Interactor"
        minApi="7"
        minBuildApi="14"
        description="Creates a new Clean Architecture Interactor">

    <category value="N Clean Architecture"/>
    <formfactor value="Mobile"/>

    <parameter
            id="interactorName"
            name="Name"
            type="string"
            constraints="class|unique|nonempty"
            default="main"
            help="The name of the class to create"/>

    <parameter
            id="interactorClass"
            name="Name"
            type="string"
            constraints="class|unique|nonempty"
            suggest="${underscoreToCamelCase(classToResource(interactorName))}Interactor"
            help="The name of the interactor to create"/>

    <parameter
            id="packageName"
            name="Package name"
            type="string"
            constraints="package"
            default="com.mycompany.myapp"/>
            
    <execute file="recipe.xml.ftl"/>

</template>
